{
	"name": "post-date-modified",
	"version": "1.0.0",
	"description": "Yet another boilerplate/template for creating WordPress plugins.",
	"private": true,
	"author": "Weston Ruter",
	"license": "GPL-2.0-or-later",
	"keywords": [
		"wordpress",
		"wordpress-plugin"
	],
	"prettier": "@wordpress/prettier-config",
	"homepage": "https://github.com/westonruter/post-date-modified",
	"repository": "https://github.com/westonruter/post-date-modified",
	"bugs": "https://github.com/westonruter/post-date-modified/issues",
	"devDependencies": {
		"@types/react": "^19.2.8",
		"@types/wordpress__block-editor": "^15.0.0",
		"@types/wordpress__blocks": "^12.5.18",
		"@wordpress/block-editor": "^15.11.0",
		"@wordpress/blocks": "^15.11.0",
		"@wordpress/components": "^32.0.0",
		"@wordpress/data": "^10.38.0",
		"@wordpress/element": "^6.38.0",
		"@wordpress/hooks": "^4.38.0",
		"@wordpress/i18n": "^6.11.0",
		"@wordpress/scripts": "*",
		"ajv": "^8.17.1",
		"ajv-draft-04": "^1.0.0",
		"ajv-formats": "^3.0.1",
		"fast-glob": "^3.3.3",
		"husky": "^9",
		"lint-staged": "^16",
		"typescript": "^5"
	},
	"scripts": {
		"check-engines": "wp-scripts check-engines",
		"check-licenses": "wp-scripts check-licenses",
		"format": "wp-scripts format --ignore-path=.gitignore && npm run lint:js:fix && npm run lint:css:fix && composer phpcbf && composer normalize",
		"lint": "tsc && npm run lint:js && npm run lint:css && composer phpstan && npm run lint:php && npm run lint:composer && npm run lint:pkg-json && npm run transform-readme",
		"lint:composer": "composer normalize --dry-run && composer validate --strict --no-check-all",
		"lint:composer:fix": "composer normalize",
		"lint:css": "wp-scripts lint-style --allow-empty-input --ignore-path=.gitignore",
		"lint:css:fix": "wp-scripts lint-style --fix --allow-empty-input --ignore-path=.gitignore",
		"lint:js": "wp-scripts lint-js --ignore-path=.gitignore",
		"lint:js:fix": "wp-scripts lint-js --fix --ignore-path=.gitignore",
		"lint:js:report": "wp-scripts lint-js --ignore-path=.gitignore --output-file=lint-js-report.json --format=json .",
		"lint:json": "node tools/validate-json.js",
		"lint:md": "wp-scripts lint-md-docs --ignore-path=.gitignore",
		"lint:php": "composer phpcs",
		"lint:php:fix": "composer phpcbf",
		"packages-update": "wp-scripts packages-update",
		"lint:pkg-json": "wp-scripts lint-pkg-json . --ignorePath .gitignore",
		"plugin-zip": "npm run transform-readme && git archive --format=zip --output=post-date-modified.zip --add-file readme.txt HEAD && zip post-date-modified.zip -d README.md",
		"prepare": "husky",
		"transform-readme": "php tools/transform-readme.php",
		"verify-version-consistency": "php tools/verify-version-consistency.php"
	}
}
